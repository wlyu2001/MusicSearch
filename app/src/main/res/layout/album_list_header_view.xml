<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cover_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nice_margin"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/nice_margin"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/album_header_title_text_size"
        app:layout_constraintTop_toBottomOf="@id/cover_image_view" />

    <TextView
        android:id="@+id/artist_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nice_margin"
        android:layout_marginEnd="@dimen/nice_margin"
        android:layout_marginTop="@dimen/nice_margin"
        android:layout_marginBottom="40dp"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/album_header_artist_text_size"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>